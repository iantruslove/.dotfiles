[core]
	excludesfile = ~/.gitignore_global
[log]
	decorate = short
[color]
	ui = auto
	interactive = auto
	diff = auto
	branch = auto
	status = auto
[pager]
	status = false
	diff = false
	show-branch = true
[format]
	numbered = auto
[alias]
	st = status
	ci = commit
	co = checkout
	ru = remote update
	br = branch
	cam = commit -a -m
	staged = diff --cached
	unstaged = diff
	both = diff HEAD
	oneline = log --oneline
	bail = reset --hard HEAD^
	tree = log --graph --decorate --pretty=oneline --abbrev-commit --all
	myhist = !git log --author=\"$(git config user.name)\" --format=%H |xargs git show --name-only --format=-------------%n%Cred%s%Creset%n%Cblue%h%Creset

